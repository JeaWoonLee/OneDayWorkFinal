<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="15dp"
    android:elevation="15dp"
    android:id="@+id/cardView"
    android:layout_marginVertical="10dp"
    android:layout_marginHorizontal="3dp">

    <!-- container -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- info -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/seekerId"
                    style="@style/blackTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="seekerId" />

                <TextView
                    android:id="@+id/seekerSex"
                    style="@style/blackTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="0dp"
                    android:text="성" />

                <TextView
                    android:id="@+id/seekerAge"
                    style="@style/blackTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="나이 세" />

                <TextView
                    style="@style/blackTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="신뢰도 " />

                <TextView
                    android:id="@+id/reliability"
                    style="@style/blackTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="0dp"
                    android:text="n%(a/b) " />

            </LinearLayout>

        </LinearLayout>
        <!-- //end info-->
        <!-- Button area -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/seekerInfoLayout"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:background="@color/seeker"
                android:layout_weight="1"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="상세 정보"
                    style="@style/blackTextView"/>
            </LinearLayout>

            <View
                android:layout_width="5dp"
                android:layout_height="0dp" />

            <LinearLayout
                android:id="@+id/refuseCandidateButton"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:background="@color/danger"
                android:gravity="center"
                android:layout_weight="1">

                <TextView
                    style="@style/whiteTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:text="신청 거절" />

            </LinearLayout>

            <View
                android:layout_width="5dp"
                android:layout_height="0dp" />

            <LinearLayout
                android:id="@+id/acceptCandidateButton"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:background="@color/offer"
                android:gravity="center"
                android:layout_weight="1">

                <TextView
                    style="@style/whiteTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:text="신청 수락" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>
</android.support.v7.widget.CardView>