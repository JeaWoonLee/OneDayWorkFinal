<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:elevation="10dp"
    app:cardCornerRadius="10dp"
    android:padding="10dp"
    android:layout_margin="10dp">

    <!-- Container -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@color/seeker">

            <TextView
                android:id="@+id/projectName"
                style="@style/itemTextView"
                android:layout_width="wrap_content"
                android:text="일감 이름"/>

            <TextView
                android:id="@+id/candidateNumber"
                android:layout_width="0dp"
                android:layout_height="0dp"/>

            <TextView
                android:id="@+id/candidateStatus"
                android:layout_width="0dp"
                android:layout_height="0dp"/>


            <!-- 가운데 공간 -->
            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1"
                />

            <TextView
                style="@style/blackTextView"
                android:text="신청 날짜"
                android:layout_width="wrap_content"/>

            <TextView
                android:id="@+id/targetDate"
                style="@style/itemTextView"
                android:layout_width="wrap_content"
                android:text="신청 날짜"/>

        </LinearLayout>
        <!-- //end Header -->

        <!-- Body -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Contents -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="3">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <!-- project Subject -->
                    <TextView
                        android:id="@+id/projectSubject"
                        style="@style/seekerItemText"
                        android:layout_width="70dp"
                        android:gravity="start"
                        android:text="직종" />

                    <TextView
                        android:id="@+id/job_name"
                        style="@style/seekerItemText"
                        android:layout_width="60dp"
                        android:gravity="start"
                        android:text="직군" />


                    <TextView
                        style="@style/blackTextView"
                        android:layout_width="40dp"
                        android:text="일당" />

                    <TextView
                        android:id="@+id/job_pay"
                        style="@style/seekerItemText"
                        android:layout_marginRight="20dp"
                        android:gravity="start"
                        android:text="일당" />

                    <View
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_weight="1"/>

                </LinearLayout>

            </LinearLayout>
            <!-- //end Contents-->

        </LinearLayout>
        <!-- //end Body -->

    </LinearLayout>
    <!-- //end Container -->

</android.support.v7.widget.CardView>