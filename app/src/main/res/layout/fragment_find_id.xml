<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".login.findInfo.FindIDFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp">

        <TextView
            style="@style/blackTextView"
            android:text="@string/join_offer_fragment2" />

        <android.support.v7.widget.AppCompatEditText
            android:id="@+id/offerIdInput"
            style="@style/offerEditText"
            app:theme="@style/offerInfoEditText"
            android:layout_weight="2"
            android:hint="@string/join_offer_fragment1"
            android:inputType="text" />

        <Button
            android:id="@+id/checkIdOverlapButton1"
            style="@style/offerButton"
            android:layout_width="0dp"
            android:layout_marginStart="10dp"
            android:layout_weight="1"
            android:text="@string/join_offer_fragment14" />
    </LinearLayout>

</LinearLayout>