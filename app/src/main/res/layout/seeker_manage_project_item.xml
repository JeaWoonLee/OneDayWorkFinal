<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:elevation="10dp"
    app:cardCornerRadius="15dp"
    android:padding="15dp"
    android:layout_marginHorizontal="10dp"
    android:layout_marginVertical="5dp">

    <!-- Container -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Header -->
        <LinearLayout
            android:id="@+id/SeekerListcardView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/seeker_header_border"
            android:orientation="horizontal"
            android:paddingEnd="10dp">

            <TextView
                android:id="@+id/projectName"
                style="@style/blackTextView"
                android:layout_width="wrap_content"
                android:text="일감 이름" />

            <TextView
                android:id="@+id/candidateNumber"
                android:layout_width="0dp"
                android:layout_height="0dp" />


            <!-- 가운데 공간 -->
            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />


            <TextView
                android:id="@+id/projectSubject"
                style="@style/blackTextView"
                android:layout_width="wrap_content"
                android:gravity="center"
                android:text="직종" />

        </LinearLayout>
        <!-- //end Header -->

        <!-- Body -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Contents -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingEnd="10dp">

                    <!-- project Subject -->

                    <TextView
                        android:id="@+id/job_name"
                        style="@style/seekerItemText"
                        android:layout_width="60dp"
                        android:gravity="start"
                        android:text="직군" />


                    <View
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_weight="1" />

                    <TextView
                        style="@style/blackTextView"
                        android:layout_width="30dp"
                        android:text="일당" />

                    <TextView
                        android:id="@+id/job_pay"
                        style="@style/seekerItemText"
                        android:layout_width="wrap_content"
                        android:layout_marginRight="5dp"
                        android:text="일당" />

                </LinearLayout>

            </LinearLayout>
            <!-- //end Contents-->

        </LinearLayout>
        <!-- //end Body -->

    </LinearLayout>
    <!-- //end Container -->

</android.support.v7.widget.CardView>