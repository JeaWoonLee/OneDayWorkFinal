<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".seeker.find.ProjectDetailActivity">

    <!-- Container -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                style="@style/itemTextView"
                android:text="기본 정보"/>

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1"/>

            <Button
                android:id="@+id/refreshButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/seekerButton"
                android:text="새로고침"/>
        </LinearLayout>

        <!-- 프로젝트 영역 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/seeker_border"
            android:layout_margin="10dp">

            <!-- 프로젝트 이름-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    style="@style/blackTextView"
                    android:text="일감 이름"/>

                <TextView
                    android:id="@+id/projectName"
                    android:layout_width="wrap_content"
                    style="@style/seekerItemText"
                    android:text="projectName"/>

            </LinearLayout>

            <!-- 프로젝트 종류 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    style="@style/blackTextView"
                    android:text="일감 분류"/>

                <TextView
                    android:id="@+id/projectSubject"
                    android:layout_width="wrap_content"
                    style="@style/seekerItemText"
                    android:text="projectSubject"/>

            </LinearLayout>

            <!-- 직군 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    style="@style/blackTextView"
                    android:text="직군"/>

                <TextView
                    android:id="@+id/jobName"
                    android:layout_width="wrap_content"
                    style="@style/seekerItemText"
                    android:text="jobName"/>
            </LinearLayout>

            <!-- 임금 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    style="@style/blackTextView"
                    android:text="임금"/>

                <TextView
                    android:id="@+id/jobPay"
                    android:layout_width="wrap_content"
                    style="@style/seekerItemText"
                    android:text="jobPay"/>

            </LinearLayout>

        </LinearLayout>

        <!-- 출근정보 -->


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/seeker_border"
            android:layout_margin="10dp">

            <TextView
                style="@style/blackTextView"
                android:text="출근 정보"/>

            <TextView
                android:id="@+id/candidateStatus"
                android:layout_width="wrap_content"
                style="@style/seekerItemText"
                android:text="candidateStatus"/>

        </LinearLayout>

        <Button
            android:id="@+id/commuteButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            style="@style/seekerButton"
            android:visibility="gone"
            android:text="출근"/>

        <!-- 코멘트 -->
        <TextView
            android:layout_width="wrap_content"
            style="@style/blackTextView"
            android:text="설명"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/seeker_border"
            android:layout_margin="10dp">

            <TextView
                android:id="@+id/projectComment"
                android:layout_width="wrap_content"
                style="@style/seekerItemText"
                android:text="projectComment"/>

        </LinearLayout>

        <!-- 맵 뷰 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                style="@style/blackTextView"
                android:text="위치"
                android:layout_width="wrap_content"/>

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1"/>

            <Button
                android:id="@+id/findRouteButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="길 찾기"
                style="@style/seekerButton"
                android:layout_marginEnd="20dp"/>

        </LinearLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:padding="10dp"
            android:layout_margin="10dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/seeker_border">

            <RelativeLayout
                android:id="@+id/map_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            </RelativeLayout>

        </FrameLayout>

    </LinearLayout>
    <!-- Container -->

</ScrollView>