<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="15dp"
    android:elevation="15dp"
    android:layout_margin="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/offer_header_border">

            <TextView
                android:id="@+id/jobName"
                android:layout_width="wrap_content"
                style="@style/whiteTextView"
                android:text="jobName"/>

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1"/>

            <TextView
                android:layout_width="wrap_content"
                style="@style/whiteTextView"
                android:text="모집 정원"/>

            <TextView
                android:id="@+id/jobLimitCount"
                android:layout_width="wrap_content"
                style="@style/whiteTextView"
                android:text="jobLimitCount"/>

            <TextView
                android:layout_width="wrap_content"
                style="@style/whiteTextView"
                android:text="명"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/jobDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/offerItemText"
                android:text="jobDate"/>

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1"/>

            <TextView
                android:layout_width="wrap_content"
                style="@style/offerItemText"
                android:text="요구 자격"/>

            <TextView
                android:id="@+id/jobRequirement"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/offerItemText"
                android:text="jobRequirement"/>

        </LinearLayout>
    </LinearLayout>

</android.support.v7.widget.CardView>