<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="15dp"
    android:elevation="15dp"
    android:id="@+id/cardView"
    android:layout_marginVertical="10dp"
    android:layout_marginHorizontal="3dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/seekerInfoLayout">

        <TextView
            android:id="@+id/seekerId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/blackTextView"
            android:text="seekerId"/>

        <TextView
            android:id="@+id/seekerSex"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/blackTextView"
            android:text="성"
            android:layout_margin="0dp"/>

        <TextView
            android:id="@+id/seekerAge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/blackTextView"
            android:text="나이 세"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/blackTextView"
            android:text="신뢰도 "
            android:layout_margin="0dp"/>

        <TextView
            android:id="@+id/reliability"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/blackTextView"
            android:text="n%(a/b) "
            android:layout_margin="0dp"/>

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"/>

        <View
            android:id="@+id/divider2"
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/black"/>

        <LinearLayout
            android:layout_width="90dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:id="@+id/acceptCandidateButton"
            android:background="@drawable/offer_header_border_right">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                style="@style/whiteTextView"
                android:text="신청 수락"/>

        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>