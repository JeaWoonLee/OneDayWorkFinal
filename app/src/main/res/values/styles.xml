<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- 회원가입 TextView -->
    <style name="joinTextView" parent="@android:style/Widget.TextView">
        <item name="android:layout_margin">10dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">15sp</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_width">100dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
    </style>

    <!-- 일용직 노동자 회원가입 EditText -->
    <style name="seekerEditText" parent="Base.V7.Widget.AppCompat.EditText">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:colorControlNormal">@color/black</item>
        <item name="android:colorControlActivated">@color/seeker</item>
        <item name="android:layout_weight">1</item>
        <item name="android:required">true</item>
    </style>

    <!-- 사업자 회원가입 EditText -->
    <style name="offerEditText" parent="Base.V7.Widget.AppCompat.EditText">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:colorControlNormal">@color/black</item>
        <item name="android:colorControlActivated">@color/offer</item>
        <item name="android:layout_weight">1</item>
        <item name="android:required">true</item>
    </style>

    <!-- 일용직 노동자 버튼 -->
    <style name="seekerButton" parent="@android:style/Widget.Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">15sp</item>
        <item name="android:background">@color/seeker</item>
    </style>

    <!-- RecyclerView Item Text -->
    <style name="itemTextView" parent="@android:style/Widget.TextView">
        <item name="android:layout_margin">10dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">15sp</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_width">100dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
    </style>

    <!-- Seeker RecyclerView Item Text -->
    <style name="seekerItemText" parent="@android:style/Widget.TextView">
    <item name="android:layout_margin">10dp</item>
    <item name="android:textColor">@color/seeker</item>
    <item name="android:textStyle">bold</item>
    <item name="android:textSize">15sp</item>
    <item name="android:layout_gravity">center_vertical</item>
    <item name="android:layout_width">100dp</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:gravity">center</item></style>


</resources>
